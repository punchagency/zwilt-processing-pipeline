{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "es2016", "esnext.asynciterable", "es2020"],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/clients/models/submodels/pricing/models/subscription.model.ts",
    "src/clients/models/submodels/pricing/models/pricing.model.ts",
    "src/hrClients/models/submodels/commentReplies/commentReplies.schema.ts"
  ]
}
